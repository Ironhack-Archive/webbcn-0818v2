<h1>Sign up</h1>

<form method="POST" action="/auth/signup">

  <div class="field" >
    <label>Username</label>
    <input type="text" name="username" value="{{fields.username}}" />
  </div>

 <div class="field" >
    <label>Password</label>
    <input type="password" name="password"/>
  </div>

  <div class="field" >
    <label>Full name</label>
    <input type="text" name="name" value="{{fields.name}}"/>
  </div>

  <div class="field" >
    <label>Cohort</label>
    <select name="cohortId">
      <option value="">Choose your cohort...</option>
      {{#each cohorts}}
        <option value="{{this.id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="field submit">
    <button type="submit">Sign up</button>
  </div>

</form>

{{#if message}}
<ul class="validation">
  <li>{{message}}</li>
</ul>
{{/if}}